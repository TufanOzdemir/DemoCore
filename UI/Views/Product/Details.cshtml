@model Domain.Models.ProductDO
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:20px">
    <div class="col-md-12">
        <div class="col-md-12">
            <div class="col-md-6">
                <img class="img-responsive img-thumbnail" src="~/Content/Product/@Model.ImageUrl" />
            </div>
            <div class="col-md-6">
                <h2>@Model.Title</h2>
                <h2>@Model.Price</h2>
                <h4>@Model.Description</h4>
            </div>
        </div>
    </div>
</div>

