@model List<Domain.Models.CategoryDO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategoriler</h2>
<a href="@Url.Action("Create","Category")">Yeni Kategori Ekle</a>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Kategori Adı</th>
            <th scope="col">Alt Kategori Sayısı</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@(Model.IndexOf(item) + 1)</th>
                <td>@item.Name</td>
                <td>@item.SubCategoryList.Count</td>
                <td><a href="@Url.Action("Edit","Category",new { id = item.Id })">Güncelle</a> / <a href="@Url.Action("Delete","Category",new { id = item.Id })">Sil</a></td>
            </tr>
        }
    </tbody>
</table>