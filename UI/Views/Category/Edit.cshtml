@model UI.ViewModels.CategoryCreateViewModel
@{
    ViewData["Title"] = "Kategori Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategori Güncelle</h2>

<form id="form-category" class="form-horizontal form-bordered " action="Edit" method="post">
    <div class="form-body">
        <input type="hidden" asp-for="@Model.CategoryDO.Id" />
        <div class="form-group">
            <label class="control-label col-md-3">Kategori Adı</label>
            <div class="col-md-6">
                <input class="form-control" type="text" asp-for="@Model.CategoryDO.Name" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">Alt Kategori</label>
        <div class="col-md-6">
            <input id="checkSubCategory" style="margin-top:12px" type="checkbox" asp-for="@Model.IsSubCategory" onchange="Demo.Ingame.Category.subCategoryActivated()" />
        </div>
    </div>
    <div id="subCategorySelector" class="form-group" style="display:none">
        <label class="control-label col-md-3">Üst Kategori</label>
        <div class="col-md-6">
            <select asp-for="@Model.CategoryDO.ParentId" class="btn btn-default form-control" data-label="left" data-width="100%">
                @foreach (var item in Model.CategoryList)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>
    </div>
    <div class="form-actions">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <input type="submit" class="btn green" value="Güncelle">
                        <a asp-controller="Category" asp-action="Index" class="btn red">Geri Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>